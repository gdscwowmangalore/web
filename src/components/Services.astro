---
import Container from "./Container.astro";
import servicesData from "./Data/services.json";
import LogoO from "./logoO.astro";
import LogoQ from "./logoQ.astro";
import LogoW from "./logoW.astro";
---

<Container>
  <div
    class=" p-3"
  >
    <div class="relative flex flex-col items-center md:flex-row" id="services">
      <div class="row items-center md:w-9/12">
        <div class="flex flex-row items-center ml-0 md:ml-14">
          <h1 class="text-5xl titan-one-regular">W</h1><h1
            class="text-5xl titan-one-regular"
          >
            h
          </h1><h1 class="text-5xl titan-one-regular">a</h1><h1
            class="text-5xl titan-one-regular"
          >
            t
          </h1><div class="flex flex-row items-center m-3">
            <h1 class="text-5xl titan-one-regular">i</h1><h1
              class="text-5xl titan-one-regular"
            >
              s
            </h1>
          </div>
          <div>
            <LogoW />
          </div>
          <div class="spinner">
            <LogoO />
          </div>
          <div>
            <LogoQ />
          </div>
          <h1 class="text-5xl titan-one-regular ml-2">?</h1>
        </div>
      </div>
      <div class="flex items-center py-5 md:w-9/12 md:py-10">
        <div class="border-1">
          <h2 class="text-xl font-normal leading-7 ml-4">
            GDSC WoW 2024 is a full-day tech extravaganza featuring talks,
            workshops, coding contests, and a thrilling Treasure Hunt called
            "Treasure to WOW." Hosted by 200+ GDSCs across India, it unites
            students, developers, and communities for a shared learning
            experience. With experts guiding real-time projects, it's the
            perfect launchpad for beginners into the world of tech careers.
          </h2>
        </div>
      </div>
    </div>

    <div class="flex-row items-center">
      <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 gap-4 md:p-12">
        <!-- card start-->
        {
          servicesData.map(({ background, name1 }) => (
            <div id="parent" class={background}>
              <div class="flex-col justify-center items-start  inline-flex">
                <div class="flex-col justify-start items-start flex">
                  <div class=" rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
                    <div class="p-4 text-[30px] font-medium">{name1}</div>
                  </div>
                </div>
              </div>
              <div class="pr-4 justify-center items-center flex spinn">
                <LogoO />
              </div>
            </div>
          ))
        }
        <!-- card end-->
      </div>
    </div>
  </div>
</Container>
