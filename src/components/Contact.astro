---
import Container from "./Container.astro";
import teamData from "./Data/team.json";
import LogoO from "./logoO.astro";
---

<Container>
  <div class="relative flex flex-col items-center md:flex-row">
    <div class="row items-center py-5 md:pr-16 md:w-6/12 md:py-10">
      <div
        class="text-center md:text-left space-y-3 flex flex-row items-center md:ml-10"
      >
        <div class="spinner">
          <LogoO />
        </div>
        <div>
          <h2
            class="text-4xl font-medium leading-none sm:text-6xl bebas-neue-regular ml-2"
          >
            FAQ
          </h2>
        </div>
      </div>
    </div>
  </div>

  <div
    id="accordion-open"
    data-accordion="close"
    class="text-black grid gap-4 my-6"
  >
    {
      teamData.process.map(({ hid, bid, target, title, description }) => (
        <h2 id={hid}>
          <div class="w-full px-14 py-10 bg-white  rounded-[45px] shadow border border-google_red flex-col justify-start items-start gap-7 inline-flex">
            <button
              type="button"
              class="w-full flex justify-between items-center"
              data-accordion-target={target}
              aria-expanded="true"
              aria-controls={bid}
            >
              <div class="justify-start items-center gap-6 flex">
                <img
                  data-accordion-icon
                  src="/team/plus.svg"
                  alt=""
                  class="justify-items-end w-10 h-10"
                  aria-hidden="true"
                />
                <h3 class="text-lg md:text-3xl font-medium bebas-neue-regular">
                  {title}
                </h3>
              </div>
            </button>
            <div class="text-lg font-normal" id={bid} aria-labelledby={hid}>
              <hr class="w-full border border-google_red mb-6" />
              <p class="mb-2 text-gray-500 text-sm md:text-xl font-sansroboto-condensed font-medium ">
                {description}
              </p>
            </div>
          </div>
        </h2>
      ))
    }
  </div>
</Container>
